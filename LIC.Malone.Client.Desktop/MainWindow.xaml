<Window x:Class="LIC.Malone.Client.Desktop.MainWindow"
		  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		  Title="Malone" Height="350" Width="989">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="235*"/>
			<ColumnDefinition Width="352*"/>
		</Grid.ColumnDefinitions>

		<ListBox Name="History" VerticalAlignment="Top" HorizontalAlignment="Stretch" SelectionChanged="History_SelectionChanged" SelectionMode="Single">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Grid Margin="5,5">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="35" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>
						<TextBlock Grid.Column="0" Text="{Binding Method}" />
						<TextBlock Grid.Column="1" Text="{Binding Url}" />
					</Grid>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>


		<Label Content="URL" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Width="51"/>
		<TextBox Name="Url" HorizontalAlignment="Left" Height="23" Margin="10,36,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="405" Grid.Column="1"/>
		<Button Name="Send" Click="Send_Click"  Content="Send" HorizontalAlignment="Left" Margin="10,59,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Height="22"/>
		<ComboBox Name="Method" SelectedValuePath="Content" Grid.Column="1" HorizontalAlignment="Left" Margin="420,36,0,0" VerticalAlignment="Top" Width="47">
			<ComboBoxItem IsSelected="True">GET</ComboBoxItem>
			<ComboBoxItem>POST</ComboBoxItem>
		</ComboBox>
		<TextBlock Name="Response" Grid.Column="1" HorizontalAlignment="Left" Height="71" Margin="12,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="510"/>
		<Label Content="Response" Grid.Column="1" HorizontalAlignment="Left" Margin="12,209,0,0" VerticalAlignment="Top"/>
		<Label Content="Token" Grid.Column="1" HorizontalAlignment="Left" Margin="12,100,0,0" VerticalAlignment="Top"/>
		<TextBox Name="Token" Grid.Column="1" HorizontalAlignment="Left" Height="73" Margin="12,131,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="455"/>
		<Button Name="ManageTokens" Content="Manage Tokens" Grid.Column="1" HorizontalAlignment="Left" Margin="362,100,0,0" VerticalAlignment="Top" Width="105" Click="ManageTokens_Click"/>

		<ListBox Name="TokensListBox" VerticalAlignment="Top" HorizontalAlignment="Stretch" SelectionChanged="History_SelectionChanged" SelectionMode="Single" Margin="0,100,0,0" Height="115">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Grid Margin="5,5">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="35" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>
						<TextBlock Grid.Column="0" Text="{Binding AccessToken}" />
						<TextBlock Grid.Column="1" Text="{Binding AccessToken}" />
					</Grid>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
		
		<ComboBox Name="TokenComboBox" SelectionChanged="TokenComboBox_OnSelectionChanged" Grid.Column="1" HorizontalAlignment="Left" Margin="72,100,0,0" VerticalAlignment="Top" Width="120">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Name}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>




	</Grid>
</Window>
